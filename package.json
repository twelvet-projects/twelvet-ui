        "axios": "^0.27.2",
        "commitizen": "^4.2.4",
        "dayjs": "^1.10.7",
        "echarts": "^5.2.2",
        "lodash": "^4.17.21",
        "mitt": "^3.0.0",
        "nprogress": "^0.2.0",
        "pinia": "^2.0.9",
        "query-string": "^7.0.1",
        "vue": "^3.2.31",
        "vue-echarts": "^6.0.0",
